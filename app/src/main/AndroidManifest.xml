<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.omnicron.caffeinate">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.CaffeinateTileService"
            android:icon="@drawable/ic_tile_icon_24dp"
            android:label="@string/caffeinate_tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service android:name=".services.SoundProfileTileService"
            android:icon="@drawable/ic_notifications_black_24dp"
            android:label="@string/tile_sound_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">

            <meta-data android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>

        </service>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity android:name=".ABTestingDebugActivity"
            android:label="A/B Testing Debug Screen">

            <intent-filter>
                <action android:name="xyz.omnicron.caffeinate.ABTestingDebugActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
    </application>

</manifest>